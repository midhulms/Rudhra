<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    tools:context="com.gracetex.revo.rudhra.SettingsScanner">


    <RelativeLayout
        android:id="@+id/UnknownSources"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true">
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Unknown Sources"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:id="@+id/USourcesView"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/UnknownSources"
        android:layout_toEndOf="@+id/UnknownSources" />

    <TextView
        android:text="ADB Enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginStart="22dp"
        android:id="@+id/ADBTView"
        android:layout_alignBaseline="@+id/ADBt"
        android:layout_alignBottom="@+id/ADBt"
        android:layout_alignStart="@+id/USourcesView" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/ADBt"
        android:layout_below="@+id/USt"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/USt"
        android:layout_alignBaseline="@+id/USourcesView"
        android:layout_alignBottom="@+id/USourcesView"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ADBt"
        android:layout_alignStart="@+id/ADBt"
        android:layout_marginTop="44dp"
        android:id="@+id/DevB" />

    <TextView
        android:text="Developer options"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DevTView"
        android:layout_alignBaseline="@+id/DevB"
        android:layout_alignBottom="@+id/DevB"
        android:layout_alignStart="@+id/USourcesView" />

</RelativeLayout>
